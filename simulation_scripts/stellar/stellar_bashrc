# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
	. /etc/bashrc
fi

# User specific environment
if ! [[ "$PATH" =~ "$HOME/.local/bin:$HOME/bin:" ]]
then
    PATH="$HOME/.local/bin:$HOME/bin:$PATH"
fi
export PATH

# Uncomment the following line if you don't like systemctl's auto-paging feature:
# export SYSTEMD_PAGER=

# User specific aliases and functions
alias gkyl_module_amd='module load cudatoolkit/12.4 openmpi/cuda-11.1/gcc/4.1.1'
alias queue_u='squeue -u ah1032'
alias du='du -h'
alias ll='ll -h'
alias quota='quota -s'
alias pgkyl_env_setup='source ~/py_venv/pgkyl/bin/activate'
alias go_scratch='cd /scratch/gpfs/ah1032'
alias check_bashrc='cat ~/.bashrc'
alias gkyl_total_runtime='sh ~/personal_gkyl_scripts/simulation_scripts/gkyl_total_runtime.sh'
alias gkyl_available_frames='sh ~/personal_gkyl_scripts/simulation_scripts/gkyl_available_frames.sh'
alias gkyl_clean_out='sh ~/personal_gkyl_scripts/simulation_scripts/gkyl_clean_out.sh'
alias gkyl_salloc_one_gpu_30min='salloc --time=00:30:00 --gres=gpu:1'
alias gkyl_salloc_one_gpu='salloc --gres=gpu:1'
alias ll='ls -l'
